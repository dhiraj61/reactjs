<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Validation Form</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<style>
    form {
        padding: 0 30%;
    }
    .bac {
        width: 100%;
        height: 100%;
        background-color: rgba(131, 202, 236, 0.679);
        border-radius: 20%;
        padding: 2vw 3vw;
    }
</style>
<body>

<div class="container mt-5 bac">
  <h2 style="text-align: center;">Validation Form</h2>
  <form action="/fac" id="validationForm" method="post" enctype="multipart/form-data">
    <div class="form-group">
      <label for="name">Name:</label>
      <input type="text" class="form-control" id="name" name="name" required>
      <div class="invalid-feedback">Name is required.</div>
    </div>
    <div class="form-group">
      <label for="email">Email:</label>
      <input type="email" class="form-control" id="email" name="email" required>
      <div class="invalid-feedback">Please enter a valid email address.</div>
    </div>
    <div class="form-group">
      <label for="phno">Phone Number:</label>
      <input type="tel" class="form-control" id="phno" name="phone" pattern="[0-9]{10}" required>
      <div class="invalid-feedback">Please enter a 10-digit phone number.</div>
    </div>
    <div class="form-group">
      <label for="age">Age:</label>
      <input type="number" class="form-control" id="age" name="age" min="18" required>
      <div class="invalid-feedback">Please enter a valid age (minimum 18).</div>
    </div>
    <div class="form-group">
      <label for="experience">Experience:</label>
      <input type="text" class="form-control" id="experience" name="experience" required>
      <div class="invalid-feedback">Experience is required.</div>
    </div>
    <div class="form-group">
        <label for="address">Address:</label>
        <input type="text" class="form-control" id="address" name="address" required>
        <div class="invalid-feedback">Address is required.</div>
    </div>
    <div class="form-group">
        <label for="image">Image:</label>
        <input type="file" name="img" class="form-control" id="image" required>
        <div class="invalid-feedback">Image is required.</div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>

<script>
    // Get the form element
const form = document.getElementById('validationForm');

// Add event listener for form submission
form.addEventListener('submit', function(event) {
  // Check if the form is valid
  if (!form.checkValidity()) {
    event.preventDefault(); // Prevent form submission if validation fails
    event.stopPropagation(); // Stop event propagation to prevent default event behavior
  }

  // Add validation classes (Bootstrap) to form fields
  form.classList.add('was-validated');
});
</script>
</body>
</html>
